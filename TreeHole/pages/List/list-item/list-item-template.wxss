.list-contaioner {
  flex-direction: column;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  margin-left: 0rpx;
  background-color:honeydew;
  border-bottom: 1px solid  lightgray;
  border-top: 1px solid  lightgray;
  padding-bottom: 1px;
}

.list-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
  background-color: honeydew;
}

.list-name {
  margin-left: 40px;
  vertical-align: middle;
  font-size: 36rpx;
  margin-bottom: 20px;
}

.list-image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}

.list-date {
  margin-left: 20px;
  vertical-align: middle;
  font-size: 26rpx;
  margin-bottom: 10px;
}

.list-content {
  color:  dimgray(252, 27, 27);
  font-size: 32rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
